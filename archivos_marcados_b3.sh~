tamfinal=3907392000

aux=2
cont=0
while [ $aux -le  $tamfinal ]; do

	((aux=aux+aux))
	((cont++))
done

echo "auxiliar" $aux
echo "contado" $cont

echo -e -n "\xAA" > datos/datos00.txt

((aux=cont+1))

echo "vamos a contar desde 01 a " $aux

for (( a=01 ; a<=aux ; a++ ))
do
	((b=a-1))
	cat datos/datos$b.txt > datos/datos$a.txt
	cat datos/datos$b.txt >> datos/datos$a.txt
	echo $b
	echo $a
done

